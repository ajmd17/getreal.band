    <section class="releases-section">
      <h1>Latest Releases</h1>
      <ul class="releases small">
        <% releases.forEach((release) => { %>
          <a href="#releases">
            <li>
              <div class="release-wrapper">
                <div class="artwork-block">

                  <img src="/images/releases/<%= release.artwork %>" alt="<%= release.title %> by Get Real band" />
                </div>
                <div class="info">
                  <h3><b><%= release.title %></b></h3>
                  <h4>
                    <% if (release.upcoming) { %>
                      <i class="upcoming">
                        Upcoming:&nbsp;
                    <% } %>
                    <%= release.released %>
                    <% if (release.upcoming) { %>
                      </i>
                    <% } %>
                  </h4>
                </div>
              </div>
            </li>
          </a>
        <% }) %>
      </ul>
      <h4>
        <a href="#releases" class="view-all">
          <span>View all releases &gt;&gt;</span>
        </a>
      </h4>
    </section>


    <section class="blogposts-section">
      <h1>Latest Posts</h1>

      <ul class="releases small">
        <% blogposts.forEach((blogpost, index) => { %>
          <a href="/blog/<%= blogpost.slug %>">
            <li>
              <div class="release-wrapper">
                <% if (blogpost.images && blogpost.images.length) { %>
                  <div class="artwork-block">
                    <img src="<%= blogpost.images[0] %>" alt="<%= blogpost.title %>" />
                  </div>
                <% } %>
                <div class="info">
                  <h3>Blog #<%= index + 1 %> â€” <%= blogpost.title %></h3>
                  <h4><%= util.formatDate(new Date(blogpost.published)) %></h4>
                  <hr/>
                  <div><%- util.truncate(blogpost.description, 200) %></div>
                </div>
              </div>
            </li>
          </a>
        <% }) %>
      </ul>
      <h4>
        <a href="#blog" class="view-all">
          <span>View all posts &gt;&gt;</span>
        </a>
      </h4>
    </section>
  </div>

  <section class="right-sections">
